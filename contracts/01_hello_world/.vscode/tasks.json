    "version": "2.0.0",   
"tasks": [
    {
        "taskName": "Compile",
        "type": "shell",
        "command": "mkdir -p build; python3 -c 'import eosfactory.core.teos as teos; teos.WAST(r\"${workspaceFolder}/src\", compile_only=True)'",
        "presentation": {
            "reveal": "always",
            "panel": "dedicated"
        },
        "problemMatcher": [
        ]
    },
    {
        "taskName": "Build",
        "type": "shell",
        "command": "mkdir -p build; python3 -c 'import eosfactory.core.teos as teos; teos.ABI(r\"${workspaceFolder}/src\"); teos.WAST(r\"${workspaceFolder}/src\")'",
        "problemMatcher": [],
        "presentation": {
            "reveal": "always",
            "panel": "dedicated"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [
        ]
    },
    {
        "taskName": "Test",
        "type": "shell",
        "command": "python3 ./tests/test1.py",
        "presentation": {
            "reveal": "always",
            "panel": "dedicated"
        },
        "problemMatcher": [
        ]
    },
    {
        "taskName": "Unittest",
        "type": "shell",
        "command": "python3 ./tests/unittest1.py",
        "presentation": {
            "reveal": "always",
            "panel": "dedicated"
        },
        "problemMatcher": [
        ]
    },
    {
        "taskName": "EOSIO API",
        "type": "shell",
        "command": "explorer.exe",
        "args": [
            "https://developers.eos.io/eosio-cpp/reference"
        ],
        "presentation": {
            "reveal": "always",
            "panel": "dedicated"
        },
        "problemMatcher": [
        ]
    }
]
}
 
